//- header -> header-top -> header-content -> header-bottom -> ressponsive -> menu js -> slick slider
header.header
	.container
		.header-top
			a.header-logo(href="index.html") MoGo
			i.fa.fa-bars.header-toggle
			ul.header-menu
				+menuLink("About")
				+menuLink("Service")
				+menuLink("Work")
				+menuLink("Blog")
				+menuLink("Contact")
				li.header-menu-item
					a.header-menu-icon(href="#") 
						i.fa.fa-shopping-cart
				li.header-menu-item
					a.header-menu-icon(href="#")
						i.fa.fa-search
		.header-content
			h2.header-content-caption Creative template
			h1.header-content-main Welcome to mogo
			a.header-content-more(href="#") Learn more
		.header-bottom
			+headerBottomItem({
				number: "01",
				title: "Intro"
			})
			+headerBottomItem({
				number: "02",
				title: "Work"
			})
			+headerBottomItem({
				number: "03",
				title: "About"
			})
			+headerBottomItem({
				number: "04",
				title: "Contacts"
			})